<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- Remote test -->
	<defaultcontrol always="true">55</defaultcontrol>
	<onload>AlarmClock(WindowDialogFocus,Control.SetFocus(55),00:00,silent)</onload>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="500">WindowClose</animation>
	
	<controls>
	
		<!-- Background -->
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<texture colordiffuse="88000000">DialogTextBackground.png</texture>
		</control>
		
		<!-- OSMC logo -->
		<control id="101" type="image">
			<left>360</left>
			<top>200</top>
			<width>1200</width>
			<height>45</height>
			<texture border="20">OSDProgressBar.png</texture>
		</control>
		
		<!-- Main group -->
		<control type="group">
			<left>600</left>
			<top>360</top>
			<width>720</width>
			<height>360</height>
			
			<!-- Background -->
			<control type="image">
				<width>720</width>
				<height>360</height>
				<texture border="20">DialogBackground.png</texture>
			</control>
			
			<!-- Heading -->
			<control id="1" type="label">
				<label>$ADDON[script.module.osmcsetting.remotes 32006]</label>
				<left>60</left>
				<top>30</top>
				<width>600</width>
				<height>48</height>
				<align>center</align>
				<font>osmc_addon_720_XLarge</font>
				<textcolor>ff808080</textcolor>
				<scroll>true</scroll>
			</control>
			
			<!-- restarting service label -->
			<control id="90" type="label">
				<left>60</left>
				<label>$ADDON[script.module.osmcsetting.remotes 32011]</label>
				<top>140</top>
				<width>600</width>
				<height>158</height>
				<align>center</align>
				<font>osmc_addon_720_Large</font>
				<textcolor>66ffffff</textcolor>
				<scroll>true</scroll>
			</control>
			
			<!-- service restarted label -->
			<control id="91" type="label">
				<left>60</left>
				<label>$ADDON[script.module.osmcsetting.remotes 32007]</label>
				<top>140</top>
				<width>600</width>
				<height>158</height>
				<align>center</align>
				<font>osmc_addon_720_Large</font>
				<textcolor>66ffffff</textcolor>
				<scroll>true</scroll>
			</control>
			
			<!-- No -->
			<control id="55" type="button">
				<left>60</left>
				<top>255</top>
				<width>240</width>
				<height>36</height>
				<align>center</align>
				<onleft>noop</onleft>
				<onright>25</onright>
				<label>$ADDON[script.module.osmcsetting.remotes 32009]</label>
				<font>osmc_addon_720_Med</font>
				<texturefocus>TextShade.png</texturefocus>
				<texturenofocus>single_pixel.png</texturenofocus>
				<focusedcolor>FFFFFFFF</focusedcolor>
				<textcolor>66ffffff</textcolor>
			</control>
			
			<!-- Yes -->
			<control id="25" type="button">
				<right>70</right>
				<top>255</top>
				<width>240</width>
				<height>36</height>
				<align>center</align>
				<onleft>55</onleft>
				<onright>noop</onright>
				<label>$ADDON[script.module.osmcsetting.remotes 32010]</label>
				<font>osmc_addon_720_Med</font>
				<texturefocus>TextShade.png</texturefocus>
				<texturenofocus>single_pixel.png</texturenofocus>
				<focusedcolor>FFFFFFFF</focusedcolor>
				<textcolor>66ffffff</textcolor>
			</control>
			
		</control>
		
	</controls>
</window>