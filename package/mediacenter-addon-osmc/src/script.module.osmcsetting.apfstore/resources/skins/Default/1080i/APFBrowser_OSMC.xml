<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- Store -->
	<defaultcontrol always="true">500</defaultcontrol>
	<onload>AlarmClock(WindowDialogFocus,Control.SetFocus(500),00:00,silent)</onload>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="500">WindowClose</animation>
	
	<controls>
	
		<!-- Background -->
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<texture colordiffuse="ff0b2430">white.png</texture>
		</control>
		
		<!-- OSMC logo -->
		<control description="osmc icon" type="image">
			<left>120</left>
			<top>105</top>
			<width>50</width>
			<height>50</height>
			<texture>logo.png</texture>
		</control>
		
		<!-- App image -->
		<control type="image">
			<left>120</left>
			<top>260</top>
			<width>300</width>
			<height>252</height>
			<texture>$INFO[Container(500).ListItem.Icon]</texture>
			<aspectratio aligny="center">keep</aspectratio>
		</control>
		
		<!-- List -->
		<control id="500" type="list">
			<left>540</left>
			<top>105</top>
			<width>1260</width>
			<height>854</height>
			<onup>500</onup>
			<ondown>500</ondown>
			<onleft>60</onleft>
			<onright>noop</onright>
			<pagecontrol>60</pagecontrol>
			<orientation>vertical</orientation>
			<viewtype label="535">list</viewtype>
			<scrolltime easing="out" tween="sine">240</scrolltime>
			
			<itemlayout height="80" width="1260">
				<control type="label">
					<height>80</height>
					<font>osmc_addon_Med</font>
					<label>$INFO[ListItem.Label]</label>
					<selectedcolor>ffffffff</selectedcolor>
					<textcolor>66ffffff</textcolor>
					<shadowcolor>44000000</shadowcolor>
				</control>
			</itemlayout>
			
			<focusedlayout height="170" width="1260">
				<control type="label">
					<height>170</height>
					<font>osmc_addon_XLarge</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>ffe0b074</textcolor>
					<shadowcolor>44000000</shadowcolor>
					<visible>IsEmpty(ListItem.Label2)</visible>
					<scroll>true</scroll>
				</control>
				<control type="group">
					<visible>!IsEmpty(ListItem.Label2)</visible>
					<control type="label">
						<top>43</top>
						<height>48</height>
						<font>osmc_addon_XLarge</font>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>ffe0b074</textcolor>
						<shadowcolor>44000000</shadowcolor>
						<scroll>true</scroll>
					</control>
					<control type="label">
						<top>100</top>
						<height>27</height>
						<font>osmc_addon_XSmall</font>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>fff1f1f1</textcolor>
						<shadowcolor>44000000</shadowcolor>
						<scroll>true</scroll>
					</control>
				</control>
			</focusedlayout>
			
		</control>
		
		<!-- Scrollbar (list) -->
		<control id="60" type="scrollbar">
			<left>480</left>
			<top>125</top>
			<width>20</width>
			<height>814</height>
			<onleft>7</onleft>
			<onright>500</onright>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<colordiffuse>66ffffff</colordiffuse>
			<texturesliderbackground border="9,1,6,1">ScrollBackground.png</texturesliderbackground>
			<texturesliderbar border="8,1,6,1">ScrollbarGripNF.png</texturesliderbar>
			<texturesliderbarfocus border="8,1,6,1" colordiffuse="ffe0b074">ScrollbarGripFO.png</texturesliderbarfocus>
			<textureslidernib></textureslidernib>
			<textureslidernibfocus></textureslidernibfocus>
		</control>
		
		<!-- Button grouplist -->
		<control id="9000" type="grouplist">
			<left>120</left>
			<bottom>336</bottom>
			<width>300</width>
			<height>198</height>
			<itemgap>34</itemgap>
			<align>left</align>
			<onleft>noop</onleft>
			<onright>60</onright>
			<onup>7</onup>
			<ondown>7</ondown>
			<orientation>vertical</orientation>
			
			<!-- Install/UnInstall Addon button -->
			<control id="6" type="button">
				<height>42</height>
				<label>$ADDON[script.module.osmcsetting.apfstore 32006]</label>
				<font>osmc_addon_Large</font>
				<texturefocus>single_pixel.png</texturefocus>
				<texturenofocus>single_pixel.png</texturenofocus>
				<textcolor>66ffffff</textcolor>
				<focusedcolor>ffe0b074</focusedcolor>
				<shadowcolor>44000000</shadowcolor>
				<align>left</align>
			</control>
			
			<!-- install count -->
			<control id="61" type="label">
				<height>42</height>
				<align>left</align>
				<label>$ADDON[script.module.osmcsetting.apfstore 32007]</label>
				<font>osmc_addon_Large</font>
				<textcolor>66ffffff</textcolor>
				<shadowcolor>44000000</shadowcolor>
				<scroll>true</scroll>
			</control>
			
			<!-- remove count -->
			<control id="62" type="label">
				<height>42</height>
				<label>$ADDON[script.module.osmcsetting.apfstore 32008]</label>
				<font>osmc_addon_Large</font>
				<textcolor>66ffffff</textcolor>
				<focusedcolor>ffe0b074</focusedcolor>
				<shadowcolor>44000000</shadowcolor>
				<align>left</align>
				<scroll>true</scroll>
			</control>
			
		</control>
		
		<!-- Exit button -->
		<control id="7" type="button">
			<left>120</left>
			<bottom>260</bottom>
			<width>300</width>
			<height>42</height>
			<label>$ADDON[script.module.osmcsetting.apfstore 32009]</label>
			<font>osmc_addon_Large</font>
			<texturefocus>single_pixel.png</texturefocus>
			<texturenofocus>single_pixel.png</texturenofocus>
			<textcolor>66ffffff</textcolor>
			<focusedcolor>ffe0b074</focusedcolor>
			<shadowcolor>44000000</shadowcolor>
			<align>left</align>
			<onleft>noop</onleft>
			<onright>60</onright>
			<onup>62</onup>
			<ondown>6</ondown>
		</control>
		
	</controls>
</window>