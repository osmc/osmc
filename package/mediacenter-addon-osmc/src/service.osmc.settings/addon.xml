<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="service.osmc.settings" name="My OSMC" version="0.1.0" provider-name="OSMC (KodeKarnage)">
    <requires>
        <import addon="xbmc.python" version="2.26.0"/>
        <import addon="script.module.osmccommon" version="0.1.0"/>
        <import addon="script.module.osmcsetting.apfstore" version="0.1.0"/>
        <import addon="script.module.osmcsetting.logging" version="0.1.0"/>
        <import addon="script.module.osmcsetting.networking" version="0.1.0"/>
        <import addon="script.module.osmcsetting.pi" version="0.1.0"/>
        <import addon="script.module.osmcsetting.remotes" version="0.1.0"/>
        <import addon="script.module.osmcsetting.services" version="0.1.0"/>
        <import addon="script.module.osmcsetting.updates" version="0.1.0"/>
    </requires>
    <extension point="xbmc.python.script" library="resources/lib/script.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="resources/lib/service.py"/>
    <extension point="xbmc.addon.metadata">
        <description lang="en_GB">My OSMC</description>
        <language>en</language>
        <platform>all</platform>
        <license>GPL-2.0-or-later</license>
        <source>https://osmc.tv</source>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/fanart.jpg</fanart>
        </assets>
        <reuselanguageinvoker>true</reuselanguageinvoker>
    </extension>
</addon>
