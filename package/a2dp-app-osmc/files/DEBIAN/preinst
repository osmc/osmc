#!/bin/bash

install_divert ()
{
	if ! dpkg-divert --listpackage "$2" | grep -q "$DPKG_MAINTSCRIPT_PACKAGE"; then
		dpkg-divert --add --package "$DPKG_MAINTSCRIPT_PACKAGE" --rename --divert "$1" "$2"
		EXIT=$?; if [ $EXIT -ne 0 ]; then exit $EXIT; fi
	fi
}

if [ -z "$DPKG_MAINTSCRIPT_PACKAGE" ]; then exit 1; fi
if [ "$1" = "install" -o "$1" = "upgrade" ]; then

	# install all diverts needed by this version of the package:
	# install_divert PATH_DIV PATH_ORIG

	install_divert /etc/pulse/daemon.conf.distributed /etc/pulse/daemon.conf
	install_divert /etc/pulse/system.pa.distributed /etc/pulse/system.pa
	install_divert /etc/bluetooth/main.conf.distributed /etc/bluetooth/main.conf
	install_divert /etc/dbus-1/system.d/bluetooth.conf.distributed /etc/dbus-1/system.d/bluetooth.conf
fi
