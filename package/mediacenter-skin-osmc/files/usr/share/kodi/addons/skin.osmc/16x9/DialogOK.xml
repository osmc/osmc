<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- okdialog -->
	<defaultcontrol always="true">10</defaultcontrol>

	<controls>

		<!-- Background -->
		<include>DialogFadeBackgroundImage</include>

		<!-- Main group -->
		<control type="group">
			<include>DialogZoomAnimation</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>780</width>
			<height>360</height>

			<!-- Background -->
			<control type="image">
				<centerleft>50%</centerleft>
				<width>780</width>
				<height>360</height>
				<texture border="20">dialogs/DialogBackground.png</texture>
			</control>

			<!-- Heading -->
			<control type="label" id="1">
				<centerleft>50%</centerleft>
				<top>40</top>
				<width>660</width>
				<height>48</height>
				<align>center</align>
				<font>Font40</font>
				<textcolor>DialogColor1</textcolor>
			</control>

			<!-- Details -->
			<control type="textbox" id="9">
				<centerleft>50%</centerleft>
				<top>96</top>
				<width>660</width>
				<height>158</height>
				<align>center</align>
				<font>Font30</font>
				<autoscroll>False</autoscroll>
				<textcolor>DialogColor2</textcolor>
			</control>

			<!-- OK -->
			<control type="button" id="10">
				<centerleft>50%</centerleft>
				<top>262</top>
				<width>660</width>
				<height>36</height>
				<align>center</align>
				<label>106</label>
				<font>Font30</font>
			</control>

		</control>

	</controls>

</window>