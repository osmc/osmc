<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- profiles -->
	<backgroundcolor>Skin.String(CustomWindowBackgroundColor, WindowBackgroundColor)</backgroundcolor>
	<defaultcontrol always="true">4</defaultcontrol>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Curve -->
