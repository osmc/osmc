<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videolibrary -->
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol>50</defaultcontrol>

	<controls>

		<!-- Background -->
		<include>WindowBackground</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Curve -->
			<control type="image">
				<left>20</left>
				<top>20</top>
				<width>1220</width>
				<height>1040</height>
				<texture flipx="true" border="0,0,40,0">common/Curve.png</texture>
				<visible>Skin.HasSetting(ShowCurve)</visible>
			</control>

			<!-- Start date -->
			<control type="label">
				<left>120</left>
				<top>170</top>
				<width>800</width>
				<height>33</height>
				<aligny>top</aligny>
				<font>Small</font>
				<label>$INFO[ListItem.StartDate]</label>
			</control>

			<!-- List -->
			<control type="list" id="50">
				<left>120</left>
				<top>226</top>
				<width>1020</width>
				<height>648</height>
				<onup>50</onup>
				<ondown>50</ondown>
				<onleft>3000</onleft>
				<onright>70</onright>
				<pagecontrol>70</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="535">list</viewtype>				
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="1020" height="108">

					<!-- Start time -->
					<control type="label">
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<textcolor>ColorHeading</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- End time -->
					<control type="label">
						<top>62</top>
						<width>200</width>
						<height>27</height>
						<align>right</align>
						<textcolor>ColorHeading</textcolor>
						<label>$INFO[ListItem.EndTime]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<left>226</left>
						<top>40</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<left>221</left>
						<top>36</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>280</left>
						<top>12</top>
						<width>500</width>
						<textcolor>ColorHeading</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>280</left>
						<top>62</top>
						<width>740</width>
						<height>27</height>
						<font>XSmall</font>
						<textcolor>ColorDetails</textcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>

					<!-- Duration -->
					<control type="label">
						<left>800</left>
						<top>12</top>
						<width>200</width>
						<textcolor>ColorHeading</textcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>

				</itemlayout>

				<focusedlayout width="1020" height="108">

					<!-- Background -->
					<control type="image">
						<width>1020</width>
						<height>108</height>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>

					<!-- Start time -->
					<control type="label">
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- End time -->
					<control type="label">
						<top>62</top>
						<width>200</width>
						<height>27</height>
						<align>right</align>
						<label>$INFO[ListItem.EndTime]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<left>226</left>
						<top>40</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<left>221</left>
						<top>36</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>280</left>
						<top>12</top>
						<width>500</width>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>280</left>
						<top>62</top>
						<width>740</width>
						<height>27</height>
						<font>XSmall</font>
						<textcolor>ColorHeading</textcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>

					<!-- Duration -->
					<control type="label">
						<left>800</left>
						<top>12</top>
						<width>200</width>
						<label>$INFO[ListItem.Duration]</label>
					</control>

				</focusedlayout>

			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="70">
				<left>1152</left>
				<top>226</top>
				<width>20</width>
				<height>648</height>
				<onleft>50</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>ColorHeading</colordiffuse>
				<texturesliderbackground border="6,1,8,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1" colordiffuse="ColorFO">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>

			<!-- Channel preview & info -->
			<control type="group">
				<right>120</right>
				<top>246</top>
				<width>512</width>

				<!-- Program name -->
				<control type="label">
					<width>512</width>
					<label>$INFO[Container(50).ListItem.Title]</label>
				</control>

				<control type="group">
					<top>76</top>
					<visible>Container(50).ListItem.HasEpg</visible>

					<!-- Plot -->
					<control type="textbox">
						<width>512</width>
						<height>460</height>
						<align>justify</align>
						<font>XSmall</font>
						<textcolor>ColorFO</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<info>Container(50).ListItem.Plot</info>
					</control>

					<!-- Next program -->
					<control type="label">
						<right>0</right>
						<top>504</top>
						<width>512</width>
						<height>30</height>
						<aspectratio>scale</aspectratio>
						<font>XSmall</font>
						<align>right</align>
						<label>$INFO[Container(50).ListItem.NextTitle,$LOCALIZE[19031]: ,]$INFO[Container(11).ListItem.NextStartTime, (,)]</label>
					</control>

				</control>

			</control>

			<!-- Channel count -->
			<control type="grouplist">
				<right>120</right>
				<bottom>110</bottom>
				<width>800</width>
				<height>44</height>
				<itemgap>6</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$INFO[Container(50).NumItems]</label>
					<font>XSmall</font>
					<textcolor>ColorHeading</textcolor>

				</control>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$VAR[ContentType]</label>
					<font>Small</font>
					<textcolor>ColorHeading</textcolor>
				</control>

			</control>

		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Options -->
		<control type="group">
			<include>OptionsAnimation</include>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus() | ControlGroup(4000).HasFocus() | ControlGroup(5000).HasFocus()</visible>

			<!-- Background -->
			<include>OptionsBackgroundImage</include>

			<!-- Main group -->
			<control type="group">
				<left>85</left>
				<top>297</top>

				<!-- Scroll -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>72</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="ColorHeading">common/ScrollBackgroundHorizontal.png</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>24</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="ColorFO">common/ScrollbarGripHorizontalFO.png</texture>
					<animation effect="slide" start="0" end="24" time="200" condition="ControlGroup(4000).HasFocus()">Conditional</animation>
					<animation effect="slide" start="0" end="48" time="200" condition="ControlGroup(5000).HasFocus()">Conditional</animation>
				</control>

				<!-- Heading -->
				<control type="label">
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<left>0</left>
					<top>34</top>
					<width>1200</width>
					<height>72</height>
					<label>$VAR[CustomMenuHeading]</label>
					<font>XLarge</font>
					<textcolor>ColorFO</textcolor>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>50</onleft>
					<onright>4001</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">3001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="3001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- Channels -->
					<control type="button" id="100">
						<include>OptionButtons</include>
						<onclick condition="Window.IsActive(TVChannels) | Window.IsActive(RadioChannels)">NextChannelGroup</onclick>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVChannels)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioChannels)</onclick>
						<onclick>SetFocus(50)</onclick>
						<label>19019</label>
					</control>
					<!-- Guide -->
					<control type="button" id="102">
						<include>OptionButtons</include>
						<label>22020</label>
						<onclick condition="Window.IsActive(TVGuide) | Window.IsActive(RadioGuide)">NextChannelGroup</onclick>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVGuide)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioGuide)</onclick>
						<onclick>SetFocus(10)</onclick>
					</control>
					<!-- Recordings -->
					<control type="button" id="103">
						<include>OptionButtons</include>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVRecordings)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioRecordings)</onclick>
						<onclick>SetFocus(50)</onclick>
						<label>19163</label>
					</control>
				</control>

				<!-- Layout controls -->
				<control type="grouplist" id="4000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft condition="!Skin.HasSetting(KioskMode)">3000</onleft>
					<onright>5001</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">4001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(4000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="4001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- Sort by -->
					<control type="button" id="3">
						<include>OptionButtons</include>
						<label>103</label>
						<visible>Control.IsEnabled(3)</visible>
					</control>
					<!-- Sort ascending/descending -->
					<control type="togglebutton" id="4">
						<include>OptionButtons</include>
						<label>584</label>
						<altlabel>585</altlabel>
						<usealttexture>Container.SortDirection(Descending)</usealttexture>
						<visible>Control.IsEnabled(4)</visible>
					</control>
					<!-- Channel Groups -->
					<control type="button" id="28">
						<include>OptionButtons</include>
						<label>-</label>
						<visible>Control.IsEnabled(28)</visible>
					</control>
					<!-- Group recording items by folder structure -->
					<control type="radiobutton" id="5">
						<include>OptionButtons</include>
						<label>19270</label>
						<visible>Window.IsActive(TVRecordings) | Window.IsActive(RadioRecordings)</visible>
					</control>
				</control>

				<!-- More controls -->
				<control type="grouplist" id="5000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>4001</onleft>
					<onright>50</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">5001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="5001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- Timers -->
					<control type="button" id="35">
						<include>OptionButtons</include>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVTimers)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioTimers)</onclick>
						<onclick>SetFocus(50)</onclick>
						<label>19040</label>
					</control>
					<!-- Search -->
					<control type="button" id="36">
						<include>OptionButtons</include>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVSearch)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioSearch)</onclick>
						<onclick>SetFocus(50)</onclick>
						<label>137</label>
					</control>
				</control>

			</control>

		</control>

	</controls>

</window>