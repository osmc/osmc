						<width>auto</width>
						<height>44</height>
						<align>right</align>
						<label>31001</label>
						<font>OLD_Font33</font>
						<textcolor>TextColor2</textcolor>
						<visible>IntegerGreaterThan(Container(50).NumItems,1)</visible>
					</control>
				</control>

			</control>

