				<align>right</align>
				<label>136</label>
				<font>OLD_Font33</font>
				<textcolor>TextColor2</textcolor>
			</control>
		</control>

		<!-- Playlist editor controls -->
		<control type="group">
			<include>DialogZoomAnimation</include>

			<!-- Background -->
			<include>DialogBackgroundImage</include>

			<!-- Heading -->
			<control type="label">
				<left>150</left>
				<top>96</top>
				<width>1620</width>
				<height>72</height>
				<font>OLD_Font72</font>
				<label>10503</label>
