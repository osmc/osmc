<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- screencalibration -->
	<defaultcontrol always="true">8</defaultcontrol>

	<controls>

		<!-- Video window -->
		<control type="videowindow" id="20">
			<include>FullscreenDimensions</include>
		</control>

		<!-- Top left mover -->
		<control type="mover" id="8">
			<width>44</width>
			<height>42</height>
			<texturefocus>calibrate/TopLeftFO.png</texturefocus>
			<texturenofocus>calibrate/TopLeftNF.png</texturenofocus>
		</control>

		<!-- Bottom right mover -->
		<control type="mover" id="9">
			<width>44</width>
			<height>42</height>
			<texturefocus>calibrate/BottomRightFO.png</texturefocus>
			<texturenofocus>calibrate/BottomRightNF.png</texturenofocus>
		</control>

		<!-- Subtitle position mover -->
		<control type="mover" id="10">
			<width>384</width>
			<height>128</height>
			<texturefocus>calibrate/SubTitlesFO.png</texturefocus>
			<texturenofocus>calibrate/SubTitlesNF.png</texturenofocus>
		</control>

		<!-- Pixel aspect ratio box -->
		<control type="resize" id="11">
			<width>128</width>
			<height>128</height>
			<texturefocus>calibrate/PixelRatioFO.png</texturefocus>
			<texturenofocus>calibrate/PixelRatioNF.png</texturenofocus>
		</control>

		<!-- Coordinates label -->
		<control type="label" id="2">
			<top>60</top>
			<width>1920</width>
			<height>36</height>
			<align>center</align>
			<textcolor>ColorFO</textcolor>
		</control>

		<!-- Help information -->
		<control type="label" id="3">
			<top>140</top>
			<width>1920</width>
			<height>36</height>
			<align>center</align>
			<textcolor>ColorFO</textcolor>
		</control>

	</controls>

</window>