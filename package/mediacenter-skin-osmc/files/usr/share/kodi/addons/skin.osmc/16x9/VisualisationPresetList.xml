<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- visualisationpresetlist -->
	<defaultcontrol always="true">2</defaultcontrol>
	<include>DialogAnimation</include>

	<controls>

		<!-- Menu -->
		<control type="group">
			<left>570</left>
			<top>245</top>
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>

			<!-- Background -->
			<control type="image">
				<width>790</width>
				<height>600</height>
				<texture>osd/OSDSettingsBack.png</texture>
			</control>

			<!-- Heading label -->
			<control type="label">
				<left>20</left>
				<top>10</top>
				<width>750</width>
				<height>48</height>
				<font>XLarge</font>
				<textcolor>ColorFO</textcolor>
				<label>31047</label>
			</control>

			<!-- Preset List -->
			<control type="list" id="2">
				<left>20</left>
				<top>80</top>
				<width>750</width>
				<height>510</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>close</onleft>
				<onright>close</onright>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="750" height="51">
					<control type="label">
						<width>750</width>
						<height>45</height>
						<font>XSmall</font>
						<textcolor>ColorHeading</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>

				<focusedlayout width="750" height="51">
					<control type="label">
						<width>750</width>
						<height>45</height>
						<font>XSmall</font>
						<textcolor>ColorFO</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>

			</control>

		</control>

	</controls>

</window>