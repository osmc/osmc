<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- weather -->
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">100</defaultcontrol>

	<controls>

		<!-- Hidden button -->
		<control type="button" id="100">
			<onclick condition="!Skin.HasSetting(KioskMode)">SetFocus(3001)</onclick>
			<onup condition="!Skin.HasSetting(KioskMode)">3000</onup>
			<ondown condition="!Skin.HasSetting(KioskMode)">3000</ondown>
			<onleft condition="!Skin.HasSetting(KioskMode)">3000</onleft>
			<onleft condition="!Skin.HasSetting(KioskMode)">3000</onleft>
		</control>

		<!-- Background -->
		<include>WindowBackground</include>

		<!-- Curve -->
		<control type="image">
			<left>20</left>
			<top>20</top>
			<width>1880</width>
			<height>688</height>
			<texture border="0,0,0,40">common/CurveHorz.png</texture>
			<visible>Skin.HasSetting(ShowCurve)</visible>
		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- View -->
			<control type="list" id="50">
				<left>120</left>
				<top>288</top>
				<width>1680</width>
				<height>400</height>
				<orientation>horizontal</orientation>
				<viewtype label="">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
				<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
				<animation effect="slide" start="0,0" end="700,0" time="0" condition="StringCompare(Container(50).NumItems,1)">conditional</animation>
				<animation effect="slide" start="0,0" end="560,0" time="0" condition="StringCompare(Container(50).NumItems,2)">conditional</animation>
				<animation effect="slide" start="0,0" end="420,0" time="0" condition="StringCompare(Container(50).NumItems,3)">conditional</animation>
				<animation effect="slide" start="0,0" end="280,0" time="0" condition="StringCompare(Container(50).NumItems,4)">conditional</animation>
				<animation effect="slide" start="0,0" end="140,0" time="0" condition="StringCompare(Container(50).NumItems,5)">conditional</animation>

				<itemlayout width="280" height="400">
					<control type="label">
						<top>2</top>
						<width>280</width>
						<height>42</height>
						<font>Large</font>
						<align>center</align>
						<textcolor>ColorFO</textcolor>
						<shadowcolor>ColorDetails</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<left>40</left>
						<top>80</top>
						<width>200</width>
						<height>200</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
					</control>
					<control type="label">
						<top>320</top>
						<width>280</width>
						<height>36</height>
						<font>Med</font>
						<align>center</align>
						<textcolor>ColorHeading</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>

				<focusedlayout width="280" height="400">
					<control type="label">
						<top>2</top>
						<width>280</width>
						<height>42</height>
						<font>Large</font>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>ColorFO</textcolor>
						<shadowcolor>ColorDetails</shadowcolor>
					</control>
					<control type="image">
						<left>40</left>
						<top>80</top>
						<width>200</width>
						<height>200</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
					</control>
					<control type="label">
						<top>320</top>
						<width>280</width>
						<height>36</height>
						<font>Med</font>
						<align>center</align>
						<textcolor>ColorHeading</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
				<content>
					<item>
						<onclick>noop</onclick>
						<label>$VAR[Day1]</label>
						<label2>$INFO[Window(Weather).Property(Day1.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day1.HighTemp)]$INFO[System.TemperatureUnits]</label2>
						<icon>$INFO[Window(Weather).Property(Day1.OutlookIcon)]</icon>
						<visible>!IsEmpty(Window(Weather).Property(Day1.Title))</visible>
					</item>
					<item>
						<onclick>noop</onclick>
						<label>$VAR[Day2]</label>
						<label2>$INFO[Window(Weather).Property(Day2.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day2.HighTemp)]$INFO[System.TemperatureUnits]</label2>
						<icon>$INFO[Window(Weather).Property(Day2.OutlookIcon)]</icon>
						<visible>!IsEmpty(Window(Weather).Property(Day2.Title))</visible>
					</item>
					<item>
						<onclick>noop</onclick>
						<label>$VAR[Day3]</label>
						<label2>$INFO[Window(Weather).Property(Day3.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day3.HighTemp)]$INFO[System.TemperatureUnits]</label2>
						<icon>$INFO[Window(Weather).Property(Day3.OutlookIcon)]</icon>
						<visible>!IsEmpty(Window(Weather).Property(Day3.Title))</visible>
					</item>
					<item>
						<onclick>noop</onclick>
						<label>$VAR[Day4]</label>
						<label2>$INFO[Window(Weather).Property(Day4.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day4.HighTemp)]$INFO[System.TemperatureUnits]</label2>
						<icon>$INFO[Window(Weather).Property(Day4.OutlookIcon)]</icon>
						<visible>!IsEmpty(Window(Weather).Property(Day4.Title))</visible>
					</item>
					<item>
						<onclick>noop</onclick>
						<label>$VAR[Day5]</label>
						<label2>$INFO[Window(Weather).Property(Day5.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day5.HighTemp)]$INFO[System.TemperatureUnits]</label2>
						<icon>$INFO[Window(Weather).Property(Day5.OutlookIcon)]</icon>
						<visible>!IsEmpty(Window(Weather).Property(Day5.Title))</visible>
					</item>
					<item>
						<onclick>noop</onclick>
						<label>$VAR[Day6]</label>
						<label2>$INFO[Window(Weather).Property(Day6.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day6.HighTemp)]$INFO[System.TemperatureUnits]</label2>
						<icon>$INFO[Window(Weather).Property(Day6.OutlookIcon)]</icon>
						<visible>!IsEmpty(Window(Weather).Property(Day6.Title))</visible>
					</item>
				</content>

			</control>

			<!-- Current icon -->
			<control type="image">
				<left>120</left>
				<bottom>120</bottom>
				<width>220</width>
				<height>220</height>
				<texture background="true">$INFO[Window(Weather).Property(Day0.OutlookIcon)]</texture>
				<aspectratio align="center" aligny="bottom">keep</aspectratio>
			</control>

			<!-- Weather Info -->
			<control type="group">
				<left>420</left>
				<top>438</top>
				<control type="label">
					<left>0</left>
					<top>314</top>
					<width>1600</width>
					<height>45</height>
					<font>Large</font>
					<label>$LOCALIZE[31046]: $INFO[Window(Weather).Property(Current.Condition)]</label>
					<textcolor>ColorFO</textcolor>
				</control>
				<control type="label">
					<left>0</left>
					<top>366</top>
					<width>1600</width>
					<height>45</height>
					<font>Small</font>
					<textcolor>ColorHeading</textcolor>
					<label>$LOCALIZE[383]: $INFO[Window(Weather).Property(Current.Wind)]</label>
				</control>
				<control type="label">
					<left>0</left>
					<top>420</top>
					<width>1600</width>
					<height>45</height>
					<font>XSmall</font>
					<textcolor>ColorDetails</textcolor>
					<label>$LOCALIZE[401]: $INFO[Window(Weather).Property(Day0.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day0.HighTemp)]$INFO[System.TemperatureUnits]</label>
				</control>
				<control type="textbox">
					<left>0</left>
					<top>474</top>
					<width>1600</width>
					<height>42</height>
					<label>$LOCALIZE[33030]: $INFO[Window(Weather).Property(Day0.Outlook)]</label>
					<textcolor>ColorFO</textcolor>
					<shadowcolor>ColorDetails</shadowcolor>
					<autoscroll>false</autoscroll>
				</control>
			</control>

			<!-- Weather provider -->
			<control type="grouplist">
				<right>120</right>
				<bottom>110</bottom>
				<width>800</width>
				<height>44</height>
				<itemgap>6</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>31045</label>
					<font>XSmall</font>
					<textcolor>ColorHeading</textcolor>
				</control>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$INFO[Window(Weather).Property(WeatherProvider)]</label>
					<font>Small</font>
					<textcolor>ColorHeading</textcolor>
				</control>
			</control>

			<!-- Options -->
			<control type="group">
				<include>OptionsAnimation</include>
				<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus() | ControlGroup(4000).HasFocus() | ControlGroup(5000).HasFocus()</visible>

				<!-- Background -->
				<include>OptionsBackgroundImage</include>

				<!-- Main group -->
				<control type="group">
					<left>85</left>
					<top>297</top>

					<!-- Heading -->
					<control type="label">
						<animation effect="fade" start="0" end="100" time="200">Visible</animation>
						<left>0</left>
						<top>34</top>
						<width>1200</width>
						<height>72</height>
						<label>33063</label>
						<font>XLarge</font>
						<textcolor>ColorFO</textcolor>
					</control>

					<!-- Weather controls -->
					<control type="grouplist" id="3000">
						<left>0</left>
						<top>130</top>
						<width>1200</width>
						<height>600</height>
						<onup>noop</onup>
						<ondown>noop</ondown>
						<onleft>100</onleft>
						<onright>100</onright>
						<itemgap>8</itemgap>
						<scrolltime>200</scrolltime>
						<orientation>vertical</orientation>
						<usecontrolcoords>true</usecontrolcoords>
						<defaultcontrol always="true">3001</defaultcontrol>
						<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

						<!-- Dummy to set focus to top -->
						<control type="button" id="3001">
							<width>0</width>
							<height>-8</height>
							<label>-</label>
							<onfocus>Down</onfocus>
						</control>
						<!-- Location control -->
						<control type="spincontrolex" id="3">
							<width>640</width>
							<label>$LOCALIZE[35500]:</label>
							<include>OptionButtons</include>
						</control>
						<!-- Refresh -->
						<control type="button" id="2">
							<include>OptionButtons</include>
							<label>103</label>
						</control>
						<!-- Settings -->
						<control type="button" id="4">
							<label>5</label>
							<onclick>ActivateWindow(MyWeatherSettings)</onclick>
							<onclick>Right</onclick>
							<include>OptionButtons</include>
						</control>
					</control>

				</control>

			</control>

		</control>

	</controls>

</window>