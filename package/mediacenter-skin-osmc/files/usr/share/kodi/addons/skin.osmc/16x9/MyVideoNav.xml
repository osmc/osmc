<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videolibrary -->
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">50</defaultcontrol>
	<onload condition="System.HasAddon(script.tvtunes)">XBMC.RunScript(script.tvtunes,backend=True)</onload>
	<views>50,51,52,53</views>
	<controls>
		<!-- Fake label2 -->
		<control type="label" id="9999">
			<font>-</font>
			<label>$VAR[Label2]</label>
		</control>
		<!-- Fake wideinfo -->
		<control type="label" id="9998">
			<font>-</font>
			<label>$VAR[WideInfo]</label>
		</control>
		<!-- Background -->
		<include>WindowBackground</include>
		<!-- Fanart -->
		<include>Fanart</include>
		<!-- Heading -->
		<include>Heading</include>
		<!-- Time -->
		<include>Time</include>
		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>
			<!-- Views -->
			<include>Viewtype50</include>
			<include>Viewtype51</include>
			<include>Viewtype52</include>
			<include>Viewtype53</include>
		</control>
		<!-- Background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="44000000">dialogs/DialogTextBackground.png</texture>
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			<visible>ControlGroup(3000).HasFocus | Control.HasFocus(3001)</visible>
		</control>
		<control type="group">
			<left>50</left>
			<top>140</top>
			<width>560</width>
			<height>780</height>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus | Control.HasFocus(3001)</visible>
			<animation type="Visible">
				<effect type="slide" start="-550,0" end="0,0" center="auto" tween="sine" easing="out" time="200" />
				<effect type="fade" start="0" end="100" time="200" />
			</animation>
			<animation type="Hidden">
				<effect type="fade" start="100" end="0" time="100" />
			</animation>
			<!-- Background -->
			<control type="image">
				<width>560</width>
				<height>780</height>
				<texture>dialogs/DialogBackground.png</texture>
			</control>
			<!-- Heading -->
			<control type="label">
				<left>20</left>
				<top>20</top>
				<width>520</width>
				<height>50</height>
				<font>Large</font>
				<label>33063</label>
				<textcolor>ColorHeading</textcolor>
			</control>
			<!-- Options -->
			<control type="grouplist" id="3000">
				<left>40</left>
				<top>80</top>
				<width>480</width>
				<height>680</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>50</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus | Control.HasFocus(3001)</visible>
				<defaultcontrol always="true">2</defaultcontrol>
				<!-- View -->
				<control type="button" id="2">
					<include>OptionButtons</include>
					<label>-</label>
				</control>
				<!-- Sort by -->
				<control type="button" id="3">
					<include>OptionButtons</include>
					<label>103</label>
					<visible>Control.IsEnabled(3)</visible>
				</control>
				<!-- Sort ascending/descending -->
				<control type="togglebutton" id="4">
					<include>OptionButtons</include>
					<label>584</label>
					<altlabel>585</altlabel>
					<usealttexture>Container.SortDirection(Descending)</usealttexture>
					<visible>Control.IsEnabled(4)</visible>
				</control>
				<!-- Fanart -->
				<control type="radiobutton" id="98">
					<include>OptionButtons</include>
					<label>20445</label>
					<onclick>Skin.ToggleSetting(MovieFanart)</onclick>
					<selected>Skin.HasSetting(MovieFanart)</selected>
					<visible>Container.Content(Movies)</visible>
				</control>
				<!-- Fanart -->
				<control type="radiobutton" id="97">
					<include>OptionButtons</include>
					<label>20445</label>
					<onclick>Skin.ToggleSetting(TVFanart)</onclick>
					<selected>Skin.HasSetting(TVFanart)</selected>
					<visible>Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(Episodes)</visible>
				</control>
				<!-- Watched toggle -->
				<control type="radiobutton" id="14">
					<include>OptionButtons</include>
					<label>20367</label>
					<visible>Control.IsEnabled(14)</visible>
				</control>
				<!-- Filter -->
				<control type="edit" id="19">
					<include>OptionButtons</include>
					<label>587</label>
					<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
				</control>
				<!-- Filter -->
				<control type="radiobutton" id="93">
					<include>OptionButtons</include>
					<label>587</label>
					<onclick>Right</onclick>
					<onclick>Right</onclick>
					<onclick>Filter</onclick>
					<selected>Container.Filtered</selected>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<!-- Open playlist -->
				<control type="button" id="91">
					<include>OptionButtons</include>
					<label>13350</label>
					<onclick condition="!StringCompare(Playlist.Length(video),0)">ActivateWindow(videoplaylist)</onclick>
					<visible>!StringCompare(Playlist.Length(video),0)</visible>
				</control>
				<!-- Update library -->
				<control type="togglebutton" id="20">
					<include>OptionButtons</include>
					<label>653</label>
					<altlabel>13353</altlabel>
					<onclick>SetFocus(50)</onclick>
					<usealttexture>Library.IsScanningVideo</usealttexture>
				</control>
				<!-- Search -->
				<control type="button" id="8">
					<include>OptionButtons</include>
					<label>137</label>
					<visible>Control.IsEnabled(8)</visible>
				</control>
				<!-- PartyMode -->
				<control type="radiobutton" id="16">
					<include>OptionButtons</include>
					<label>589</label>
					<visible>Container.Content(MusicVideos)</visible>
				</control>
				<!-- Unlock Shares -->
				<control type="radiobutton" id="11">
					<include>OptionButtons</include>
					<label>20336</label>
					<onclick>XBMC.Mastermode</onclick>
					<selected>System.IsMaster</selected>
					<visible>System.HasLocks</visible>
				</control>
				<!-- Settings -->
				<control type="button" id="92">
					<include>OptionButtons</include>
					<label>5</label>
					<onclick>SetFocus(50)</onclick>
					<onclick>ActivateWindow(videossettings)</onclick>
				</control>
			</control>
		</control>
		<control type="button" id="3001">
			<top>140</top>
			<width>90</width>
			<height>780</height>
			<label>-</label>
			<font>-</font>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<visible>true</visible>
		</control>
	</controls>
</window>