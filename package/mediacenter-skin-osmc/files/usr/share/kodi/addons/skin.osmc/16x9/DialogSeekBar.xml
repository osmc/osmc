<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<defaultcontrol always="true">901</defaultcontrol>
	<visible>[VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)] + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding] + !Window.IsVisible(videoosd) + !Window.IsVisible(subtitlesearch)</visible>
	<animation type="WindowOpen">
		<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
		<effect type="fade" start="0" end="100" time="200"/>
	</animation>

	<controls>

		<!-- Info -->
		<control type="group">
			<left>150</left>
			<top>75</top>
			<width>1620</width>
			<height>234</height>

			<!-- Background -->
			<control type="image">
				<width>1620</width>
				<height>234</height>
				<texture border="1">osd/OSDBack.png</texture>
			</control>

			<!-- Title -->
			<control type="label">
				<left>20</left>
				<top>14</top>
				<width>1280</width>
				<height>48</height>
				<font>XLarge</font>
				<textcolor>ColorFO</textcolor>
				<label>$VAR[VideoPlayerTitle]</label>
			</control>

			<!-- Plot -->
			<control type="textbox">
				<left>20</left>
				<top>87</top>
				<width>1280</width>
				<height>118</height>
				<label>$VAR[VideoPlayerPlot]</label>
				<font>XSmall</font>
				<textcolor>ColorHeading</textcolor>
				<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
			</control>

			<!-- Icon -->
			<control type="image">
				<right>20</right>
				<top>20</top>
				<width>234</width>
				<height>194</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>$VAR[VideoPlayerIcon]</texture>
			</control>

		</control>

		<!-- Player forwarding/rewinding -->
		<control type="group">
			<left>150</left>
			<top>870</top>
			<width>80</width>
			<height>60</height>
			<visible>player.forwarding | player.rewinding | player.paused</visible>

			<!-- Background -->
			<control type="image">
				<width>80</width>
				<height>60</height>
				<texture border="1">osd/OSDBack.png</texture>
			</control>

			<!-- Status -->
			<control type="label">
				<width>80</width>
				<height>60</height>
				<font>Med</font>
				<align>center</align>
				<label>$VAR[PlayerStatus]</label>
				<textcolor>ColorHeading</textcolor>
			</control>

			<!-- Pause -->
			<control type="image">
				<left>10</left>
				<width>60</width>
				<height>60</height>
				<texture>osd/OSDPauseNF.png</texture>
				<visible>player.paused</visible>
			</control>

		</control>

		<!-- Player skipping -->
		<control type="group">
			<right>150</right>
			<top>870</top>
			<width>140</width>
			<height>60</height>
			<visible>[Player.DisplayAfterSeek + IntegerGreaterThan(Player.ChapterCount,0)] | IntegerGreaterThan(MusicPlayer.PlaylistLength,0)</visible>

			<!-- Background -->
			<control type="image">
				<width>140</width>
				<height>60</height>
				<texture border="1">osd/OSDBack.png</texture>
			</control>

			<!-- Status -->
			<control type="label">
				<width>140</width>
				<height>60</height>
				<font>XSmall</font>
				<align>center</align>
				<label>[B]$INFO[Player.Chapter,(,/]$INFO[Player.ChapterCount,,)][/B][B]$INFO[MusicPlayer.PlaylistPosition,(,/]$INFO[MusicPlayer.PlaylistLength,,)][/B]</label>
				<textcolor>ColorHeading</textcolor>
				<visible>!Window.IsVisible(visualisation)</visible>
			</control>

			<!-- Status -->
			<control type="label">
				<width>140</width>
				<height>60</height>
				<font>XSmall</font>
				<align>center</align>
				<label>[B]$INFO[MusicPlayer.PlaylistPosition,(,/]$INFO[MusicPlayer.PlaylistLength,,)][/B]</label>
				<textcolor>ColorHeading</textcolor>
				<visible>Window.IsVisible(visualisation)</visible>
			</control>

		</control>

		<!-- Progress -->
		<control type="group">
			<left>150</left>
			<top>945</top>
			<width>1620</width>
			<height>60</height>

			<!-- Background -->
			<control type="image">
				<width>1620</width>
				<height>60</height>
				<texture border="1">osd/OSDBack.png</texture>
			</control>

			<!--  Current position/Time remaining -->
			<control type="label">
				<left>20</left>
				<width>260</width>
				<height>60</height>
				<font>XSmall</font>
				<textcolor>ColorHeading</textcolor>
				<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
			</control>

			<!--  Progress bar -->
			<control type="progress" id="1">
				<left>280</left>
				<top>20</top>
				<width>920</width>
				<height>20</height>
				<info>Player.Progress</info>
				<texturebg border="2">osd/OSDProgressBack.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="2">osd/OSDProgressBar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>

			<!--  Cache bar -->
			<control type="progress" id="1">
				<left>280</left>
				<top>20</top>
				<width>920</width>
				<height>20</height>
				<info>Player.ProgressCache</info>
				<texturebg colordiffuse="00ffffff" border="2">osd/OSDProgressBack.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture colordiffuse="66ffffff" border="2">osd/OSDProgressBar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>

			<!-- Current Time/End Time -->
			<control type="label">
				<left>1001</left>
				<width>600</width>
				<height>60</height>
				<align>right</align>
				<font>XSmall</font>
				<textcolor>ColorHeading</textcolor>
				<label>$INFO[System.Time,$LOCALIZE[142] , / ]$INFO[Player.FinishTime,$LOCALIZE[19081] ]</label>
			</control>

		</control>

	</controls>

</window>