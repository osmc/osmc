+			uint32_t fwMinor:12;
+			uint32_t fwBuild:8;
+		};
+		uint32_t version;
+	} fwVersion;
+
+	uint32_t Reserved1; // For future expansion
+	uint32_t Reserved2; // For future expansion
+} BC_INFO_CRYSTAL, *PBC_INFO_CRYSTAL;
